                    <label asp-for="Volunteer.OtherBoards"></label>
                    <textarea asp-for="Volunteer.OtherBoards" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Volunteer.OtherBoards" class="text-danger"></span>
                </div>
                <hr class="mt-4 mb-4" />
                <h3 class="mb-3">Previous Work Experience (Optional)</h3>
                <br />
                <!--Add new fields dynamically here-->
                @for (int i = 0; i < 2; i++)
                {
                    <div class="mb-3">
                        <label>Employer @(i + 1) </label>
                        <div class="row">
                            <div class="col-md-4 form-group">
                                <label asp-for="@Model.WorkExperiences[@i].EmployerName"></label>
                                <input asp-for="@Model.WorkExperiences[@i].EmployerName" class="form-control">
                                <span asp-validation-for="@Model.WorkExperiences[@i].EmployerName" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 form-group">
                                <label asp-for="@Model.WorkExperiences[@i].EmployerPhone"></label>
                                <input asp-for="@Model.WorkExperiences[@i].EmployerPhone" class="form-control">
                                <span asp-validation-for="@Model.WorkExperiences[@i].EmployerPhone" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 form-group">
                                <label asp-for="@Model.WorkExperiences[@i].ContactPerson"></label>
                                <input asp-for="@Model.WorkExperiences[@i].ContactPerson" class="form-control">
                                <span asp-validation-for="@Model.WorkExperiences[@i].ContactPerson" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label asp-for="@Model.WorkExperiences[@i].PositionWorked"></label>
                                <input asp-for="@Model.WorkExperiences[@i].PositionWorked" class="form-control">
                                <span asp-validation-for="@Model.WorkExperiences[@i].PositionWorked" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label asp-for="@Model.WorkExperiences[@i].StartDate"></label>
                                <input asp-for="@Model.WorkExperiences[@i].StartDate" class="form-control">
                                <span asp-validation-for="@Model.WorkExperiences[@i].StartDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label asp-for="@Model.WorkExperiences[@i].EmployerAddress"></label>
                                <input asp-for="@Model.WorkExperiences[@i].EmployerAddress" class="form-control">
                                <span asp-validation-for="@Model.WorkExperiences[@i].EmployerAddress" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label id="workexp-current-label-@i" asp-for="@Model.WorkExperiences[@i].EndDate"></label>
                                <input id="workexp-current-enddate-@i" asp-for="@Model.WorkExperiences[@i].EndDate" class="form-control">
                            </div>
                            <div class="form-check col-md-12" style="text-align: right;">
                                <input id="workexp-current-check-@i" onclick="makeWorkExperienceCurrent(@i)" asp-for="@Model.WorkExperiences[@i].CurrentJob" />
                                <label>Current Job</label>
                            </div>
                        </div>
                    </div>
                }
                <hr class="mt-4 mb-4" />
                <h3 class="mb-3">References (Optional)</h3>
                <br />
