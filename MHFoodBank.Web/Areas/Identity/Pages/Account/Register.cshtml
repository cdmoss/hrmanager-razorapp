                                    <div class="input-group-append" data-target="#dtp-monday-1-1" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="far fa-clock"></i></div>
                                    </div>
                                </div>
                            </div>

                            <span class="col-md-1 justify-content-center">to</span>

