                    <textarea asp-for="Volunteer.EducationTraining" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Volunteer.EducationTraining" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Volunteer.SkillsInterestsHobbies"></label>
                    <textarea asp-for="Volunteer.SkillsInterestsHobbies" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Volunteer.SkillsInterestsHobbies" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Volunteer.VolunteerExperience"></label>
                    <textarea asp-for="Volunteer.VolunteerExperience" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Volunteer.VolunteerExperience" class="text-danger"></span>
