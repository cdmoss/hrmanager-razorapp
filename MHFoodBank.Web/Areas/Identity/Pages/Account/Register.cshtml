@page
@using MHFoodBank.Common
@model RegisterModel

@{
    ViewData["Title"] = "Apply as a volunteer";
}

<script src="~/js/datetimepickers.js"></script>

<div class="mt-5">
    <div style="height: 20vh" class="text-center">
        <img class="h-100" src="~/MHFB.png" alt="MHFB Logo" />
    </div>
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-9">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr />
                <!--Login Credentials-->
                <h3 class="mt-b">Personal and Contact Information (Required)</h3>
                <br />
                <div class="row justify-content-center">
                    <div class="col-md-6 form-group text-left">
                        <label asp-for="Volunteer.Email">Email (Required)</label>
                        <input asp-for="Volunteer.Email" class="form-control" />
                        <span asp-validation-for="Volunteer.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group text-left">
                        <label asp-for="Volunteer.ConfirmEmail">Confirm Email (Required)</label>
                        <input asp-for="Volunteer.ConfirmEmail" class="form-control" />
                        <span asp-validation-for="Volunteer.ConfirmEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 form-group text-left">
                        <label asp-for="Volunteer.Password">Password (Required)</label>
                        <input onfocus="showRequirements()" onblur="hideRequirements()" asp-for="Volunteer.Password" class="form-control" />
                        <span id="password-requirements" style="display: none;">
                            Must contain at least one letter, number and a special character (@@$!%*#?&)
                        </span>
                        <span asp-validation-for="Volunteer.Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group text-left">
                        <label asp-for="Volunteer.ConfirmPassword">Confirm Password (Required)</label>
                        <input asp-for="Volunteer.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Volunteer.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <!--Personal Information-->
                <div class="row justify-content-center">
                    <div class="col-md-6 form-group text-left">
                        <label asp-for="Volunteer.FirstName"></label>
                        <input asp-for="Volunteer.FirstName" class="form-control" />
                        <span asp-validation-for="Volunteer.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group text-left">
                        <label asp-for="Volunteer.LastName"></label>
                        <input asp-for="Volunteer.LastName" class="form-control" />
                        <span asp-validation-for="Volunteer.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <!--Contact Information-->
                    <div class="col-md-12 form-group">
                        <label asp-for="Volunteer.Address"></label>
                        <input asp-for="Volunteer.Address" class="form-control" />
                        <span asp-validation-for="Volunteer.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-4 form-group text-left">
                        <label asp-for="Volunteer.City"></label>
                        <input asp-for="Volunteer.City" class="form-control" />
                        <span asp-validation-for="Volunteer.City" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 form-group text-left">
                        <label asp-for="Volunteer.PostalCode"></label>
                        <input asp-for="Volunteer.PostalCode" class="form-control" />
                        <span asp-validation-for="Volunteer.PostalCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 form-group">
                        <label asp-for="Volunteer.Birthdate"></label>
                        <input asp-for="Volunteer.Birthdate" class="form-control" />
                        <span asp-validation-for="Volunteer.Birthdate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-4 form-group text-left">
                        <label asp-for="Volunteer.MainPhone"></label>
                        <input asp-for="Volunteer.MainPhone" class="form-control" />
                        <span asp-validation-for="Volunteer.MainPhone" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 form-group text-left">
                        <label asp-for="Volunteer.AlternatePhone1"></label>
                        <input asp-for="Volunteer.AlternatePhone1" class="form-control" />
                        <span asp-validation-for="Volunteer.AlternatePhone1" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 form-group text-left">
                        <label asp-for="Volunteer.AlternatePhone2"></label>
                        <input asp-for="Volunteer.AlternatePhone2" class="form-control" />
                        <span asp-validation-for="Volunteer.AlternatePhone2" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 form-group">
                        <label asp-for="Volunteer.EmergencyFullName"></label>
                        <input asp-for="Volunteer.EmergencyFullName" class="form-control" />
                        <span asp-validation-for="Volunteer.EmergencyFullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group text-left">
                        <label asp-for="Volunteer.EmergencyPhone1"></label>
                        <input asp-for="Volunteer.EmergencyPhone1" class="form-control" />
                        <span asp-validation-for="Volunteer.EmergencyPhone1" class="text-danger"></span>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 form-group">
                        <label asp-for="Volunteer.EmergencyRelationship"></label>
                        <input asp-for="Volunteer.EmergencyRelationship" class="form-control" />
                        <span asp-validation-for="Volunteer.EmergencyRelationship" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-group text-left">
                        <label asp-for="Volunteer.EmergencyPhone2"></label>
                        <input asp-for="Volunteer.EmergencyPhone2" class="form-control" />
                        <span asp-validation-for="Volunteer.EmergencyPhone2" class="text-danger"></span>
                    </div>
                </div>
                <hr class="mt-4 mb-4" />
                <!--Preferred Positions-->
                <h3 class="mt-b">Preferred Positions (Optional)</h3>
                <br />
                @foreach (Position position in @Model.Positions)
                {
                    <div class="col-md-6 form-check">
                        <input type="checkbox" name="@position.Name" />
                        <label class="form-check-label">@position.Name</label>
                    </div>
                }
                <hr class="mt-4 mb-4" />
                <!--Certificate Checkboxes-->
                <H3 class="mt-3">Relevant Certificates (Optional)</H3>
                <br />

                <div class="row mb-2">
                    <div class="col-md-4 form-check">
                        <input id="firstaid-check" onclick="ToggleCertificateExpiries('firstaid-check', 'firstaid-date')" asp-for="Volunteer.FirstAidCpr" />
                        <label asp-for="Volunteer.FirstAidCpr" class="form-check-label"></label>
                        <span asp-validation-for="Volunteer.FirstAidCpr" class="text-danger"></span>
                    </div>

                    @*<div class="col-md-2">
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-secondary active">
                                <input type="radio" name="options" autocomplete="off"> Level A
                            </label>
                            <label class="btn btn-secondary">
                                <input type="radio" name="options" autocomplete="off"> Level C
                            </label>
                        </div>
                    </div>*@

                    <p class="col-md-2">Expiry:</p>
                    <input id="firstaid-date" class="col-md-4 form-control" asp-for="Volunteer.FirstAidCprExpiry" disabled />
                </div>

                <div class="row mb-2">
                    <div class="col-md-4 form-check">
                        <input id="foodsafe-check" onclick="ToggleCertificateExpiries('foodsafe-check', 'foodsafe-date')" asp-for="Volunteer.FoodSafe" />
                        <label asp-for="Volunteer.FoodSafe" class="form-check-label"></label>
                        <span asp-validation-for="Volunteer.FoodSafe" class="text-danger"></span>
                    </div>
                    <p class="col-md-2">Expiry:</p>
                    <input id="foodsafe-date" class="col-md-4 form-control" asp-for="Volunteer.FoodSafeExpiry" disabled />
                </div>

                <div class="form-group mt-4">
                    <label asp-for="Volunteer.OtherCertificates"></label>
                    <input asp-for="Volunteer.OtherCertificates" class="form-control" />
                    <span asp-validation-for="Volunteer.OtherCertificates" class="text-danger"></span>
                </div>

                <hr class="mt-4 mb-4" />
                <!--Availability-->
