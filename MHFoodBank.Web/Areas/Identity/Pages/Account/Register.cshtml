                <br />
                <span asp-validation-for="AvailabilityError" class="text-danger"></span>
                <div id="availability">
                    <label>Monday</label>
                    <div class="monday-fields">
                        <div class="row ml-1">

                            <div class="form-group">
                                <div class="input-group date datetimepicker-time" id="dtp-monday-1-1" data-target-input="nearest">
