                                    <input id="edit-recshift-endtime" name="thursday-2-1" type="text" class="form-control datetimepicker-input end-time" data-target="#dtp-thursday-2-1" />
                                    <div class="input-group-append" data-target="#dtp-thursday-2-1" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="far fa-clock"></i></div>
                                    </div>
