@page
@model MHFoodBank.Web.Areas.Admin.Pages.ChangePasswordModel
@{
    Layout = "~/Areas/Admin/Pages/Shared/_Layout.cshtml";
}

    <div class="ml-5">
        <h4>Change Password for @Model.Volunteer.VolunteerProfile.FirstName @Model.Volunteer.VolunteerProfile.LastName</h4>

        <div class="row">
            <div class="col-md-6">
                <hr />
                <form id="change-password-form" method="post">
                    <input type="hidden" asp-for="Volunteer.Id" value="@Model.Volunteer.Id"/>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.OldPassword"></label>
                        <input asp-for="Input.OldPassword" class="form-control"/>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NewPassword"></label>
                        <input asp-for="Input.NewPassword" class="form-control"/>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control"/>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <hr/>
                    <button type="submit" class="btn btn-primary">Update password</button>
                </form>
            </div>
        </div>
    </div>

